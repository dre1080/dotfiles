# skip the verification of insecure directories
ZSH_DISABLE_COMPFIX="true"

# disable for mix commands as it slows it down too much
ZSH_AUTOSUGGEST_HISTORY_IGNORE="mix *"

# shortcut to this dotfiles path is $ZSH
export ZSH=$HOME/.config/zsh

# your projects folder
export PROJECTS="$HOME/Code"

# preferred editor
export MICRO_TRUECOLOR=1
export EDITOR="micro"
export SUDO_EDITOR="$EDITOR"

# setup docker
export DOCKER_CONFIG=${DOCKER_CONFIG:-"~/.docker"}

# setup coloring for man pages
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export MANROFFOPT="-c"

# enable IEx history
# see: https://hexdocs.pm/iex/IEx.html#module-shell-history
export ERL_AFLAGS="-kernel shell_history enabled"

# setup mise
eval "$(~/.local/bin/mise activate zsh)"
eval "$(~/.local/bin/mise hook-env -s zsh)"

# load zsh config
source "$ZSH/path.zsh"
source "$ZSH/config.zsh"
source "$ZSH/aliases.zsh"

# initialize autocomplete here, otherwise functions won't be loaded
autoload -Uz compinit
if [[ -n ${ZSH}/.zcompdump(#qN.mh+24) ]]; then
	compinit;
else
	compinit -C;
fi

source "$ZSH/plugins.zsh"

zsh-defer -c "$(zoxide init zsh)"

# Stash your environment variables in ~/.localrc. This means they'll stay out
# of your main dotfiles repository (which may be public, like this one), but
# you'll have access to them in your scripts.
if [[ -a ~/.localrc ]]; then
  zsh-defer source ~/.localrc
fi

eval "$(starship init zsh)"
