
# skip the verification of insecure directories
ZSH_DISABLE_COMPFIX="true"

# only set this when on WSL
if [[ $(grep -i Microsoft /proc/version) ]]; then
  export IS_WSL=1
fi

# shortcut to this dotfiles path is $ZSH
export ZSH=$HOME/.config/zsh

# your project folder that we can `c [tab]` to
export PROJECTS="$HOME/Code"

# preferred editor
export EDITOR="micro"
export MICRO_TRUECOLOR=1

# setup podman
export DOCKER_HOST=unix://$XDG_RUNTIME_DIR/podman/podman.sock

# setup erlang/elixir/IEx
# enable IEx history
# see: https://hexdocs.pm/iex/IEx.html#module-shell-history
(( $+commands[erl] )) && export ERL_AFLAGS="-kernel shell_history enabled"

# setup mise
eval "$($HOME/.local/bin/mise activate zsh)"

# load zsh config
source "$ZSH/path.zsh"
source "$ZSH/config.zsh"
source "$ZSH/aliases.zsh"

# setup sheldon
eval "$(sheldon source)"

# setup starship prompt
eval "$(starship init zsh)"

# initialize autocomplete here
autoload -Uz compinit
if [[ -n ${ZSH}/.zcompdump(#qN.mh+24) ]]; then
	compinit;
else
	compinit -C;
fi
